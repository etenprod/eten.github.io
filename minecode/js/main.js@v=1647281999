    // $('#music')[0].play()
})

function getRandomInt(min, max) {
    min = Math.ceil(min);
    max = Math.floor(max);
    return Math.floor(Math.random() * (max - min)) + min; //Максимум не включается, минимум включается
}

$().ready(function(){

    $('#appeals-username').change(function(event){
        let nickname = $(event.target).val()
        let url = nickname == null ? '' : `https://minotar.net/avatar/${nickname}/75`
        $('#appealAvatar').prop('src', url)
    })
})

